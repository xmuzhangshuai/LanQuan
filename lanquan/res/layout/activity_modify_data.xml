<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_main_bg"
    android:orientation="vertical" >

    <include
        layout="@layout/top_navigation4"
        android:focusable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/system_main_bg"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/system_main_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <FrameLayout
                    android:id="@+id/change_headImageBtn"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/camera_image"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:src="@drawable/avatar_bg" />

                    <ImageView
                        android:id="@+id/headimage"
                        android:layout_width="@dimen/personal_photo_size"
                        android:layout_height="@dimen/personal_photo_size"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/set_change_head" />
                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/modify_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/sel_color_white_gray" >

                <TextView
                    android:id="@+id/modify_nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="修改用户名"
                    android:textColor="@color/font_gray_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:text="0M"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_below="@+id/modify_nickname_text"
                    android:background="@color/system_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:src="@drawable/icon_go_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/modify_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sel_color_white_gray" >

                <TextView
                    android:id="@+id/modify_pass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="修改密码"
                    android:textColor="@color/font_gray_dark"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:src="@drawable/icon_go_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_below="@+id/modify_pass_text"
                    android:background="@color/system_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/modify_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sel_color_white_gray" >

                <TextView
                    android:id="@+id/modify_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginBottom="@dimen/new_msg"
                    android:layout_marginTop="@dimen/new_msg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/motify_data_space"
                    android:text="更换手机号"
                    android:textColor="@color/font_gray_dark"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/motify_data_space"
                    android:src="@drawable/icon_go_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_below="@+id/inform_text"
                    android:background="@color/system_gray" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>