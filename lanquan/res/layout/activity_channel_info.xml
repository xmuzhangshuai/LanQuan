<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_main_bg"
    android:orientation="vertical" >

    <include
        layout="@layout/top_navigation4"
        android:focusable="true" />

    <RelativeLayout
        android:id="@+id/channel_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/day_recommend_help_padding"
        android:background="@color/sel_color_white_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/personal_timecapsule_padding"
        android:paddingLeft="@dimen/day_recommend_help_padding"
        android:paddingRight="@dimen/day_recommend_help_padding"
        android:paddingTop="@dimen/personal_timecapsule_padding" >

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="频道主"
            android:textColor="@color/font_gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/system_main_orange" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/channel_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.1dp"
        android:background="@color/sel_color_white_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/personal_timecapsule_padding"
        android:paddingLeft="@dimen/day_recommend_help_padding"
        android:paddingRight="@dimen/day_recommend_help_padding"
        android:paddingTop="@dimen/personal_timecapsule_padding" >

        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="频道名"
            android:textColor="@color/font_gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/channel_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/font_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/channel_explian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.1dp"
        android:background="@color/sel_color_white_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/personal_timecapsule_padding"
        android:paddingLeft="@dimen/day_recommend_help_padding"
        android:paddingRight="@dimen/day_recommend_help_padding"
        android:paddingTop="@dimen/personal_timecapsule_padding" >

        <TextView
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="简介"
            android:textColor="@color/font_gray_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/channel_explian_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:maxEms="12"
            android:textColor="@color/font_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/channel_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.1dp"
        android:background="@color/sel_color_white_gray"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/personal_timecapsule_padding"
        android:paddingLeft="@dimen/day_recommend_help_padding"
        android:paddingRight="@dimen/day_recommend_help_padding"
        android:paddingTop="@dimen/personal_timecapsule_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="分享频道二维码"
            android:textColor="@color/font_gray_dark"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/day_recommend_viewpager_margin_top"
            android:layout_height="@dimen/day_recommend_viewpager_margin_top"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/go_right_icon"
            android:src="@drawable/channel_info_qrcode" />

        <ImageView
            android:id="@+id/go_right_icon"
            android:layout_width="@dimen/time_capsule20"
            android:layout_height="@dimen/time_capsule20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go_right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <Button
            android:id="@+id/cancel_concern_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:background="@drawable/sel_auth_code_again_bg"
            android:text="取消关注"
            android:textColor="@color/white"
            android:textSize="@dimen/day_recommend_user_font" />
    </LinearLayout>

</LinearLayout>