<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigation_height"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <ImageView
            android:id="@+id/rlCommenTitleBG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/nav_bg" />

        <LinearLayout
            android:id="@+id/left_btn_bg"
            android:layout_width="@dimen/login_register"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sel_login_back_btn"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/day_recommend_help_font_space" >

            <ImageView
                android:id="@+id/nav_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:src="@drawable/ic_action_previous_item" />
        </LinearLayout>

        <TextView
            android:id="@+id/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="更换手机号"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_divider" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="请输入你的手机号码"
        android:textColor="@color/system_main_orange"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="您将收到验证身份的短信来更新手机号"
        android:textColor="@color/font_gray"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_orange_radius"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_phone_pre_bg"
            android:gravity="center"
            android:text="+86"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_height"
            android:layout_weight="6"
            android:background="@null"
            android:hint="手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:textSize="@dimen/day_recommend_user_font" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/autncode"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_height"
            android:layout_weight="2"
            android:background="@drawable/shape_orange_radius"
            android:drawableLeft="@drawable/icon_authcode_gray"
            android:drawablePadding="10dp"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_recommend_user_font" />

        <Button
            android:id="@+id/get_authcode"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sel_authcode_btn"
            android:text="获取验证码"
            android:textColor="@color/sel_getauthcode_font_color"
            android:textSize="@dimen/day_recommend_user_font" />
    </LinearLayout>

    <Button
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_height"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_login_btn_bg"
        android:text="变更"
        android:textColor="@color/sel_getauthcode_font_color"
        android:textSize="16sp" />

</LinearLayout>