<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_bg"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/day_recommend_dot_space" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/gethead_btn"
                android:layout_width="@dimen/personal_photo_size"
                android:layout_height="@dimen/personal_photo_size"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/sel_get_head_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/camera_image"
                    android:layout_width="@dimen/sent_btn_height"
                    android:layout_height="@dimen/sent_btn_height"
                    android:src="@drawable/sel_get_head" />

                <ImageView
                    android:id="@+id/headimage"
                    android:layout_width="@dimen/personal_photo_size"
                    android:layout_height="@dimen/personal_photo_size"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="上传头像"
                android:textColor="@color/font_gray"
                android:textSize="13.0sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_login_radius"
                android:drawableLeft="@drawable/icon_nickname_gray"
                android:drawablePadding="10dp"
                android:hint="昵称"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:paddingRight="@dimen/personal_timecapsule_padding"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/day_recommend_user_font" >
            </EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_radius"
                android:drawableLeft="@drawable/icon_pass_gray"
                android:drawablePadding="10dp"
                android:hint="密码,(6到18位)"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/day_recommend_user_font" />

            <EditText
                android:id="@+id/conform_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_radius"
                android:drawableLeft="@drawable/icon_pass_gray"
                android:drawablePadding="10dp"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/day_recommend_user_font" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_height"
                android:layout_marginTop="20dp"
                android:background="@drawable/sel_login_btn_bg"
                android:text="注册"
                android:textColor="@color/sel_getauthcode_font_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>