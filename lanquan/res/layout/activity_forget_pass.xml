<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigation_height"
        android:gravity="center_vertical"
        android:padding="0.0px" >

        <ImageView
            android:id="@+id/rlCommenTitleBG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/login_bg" />

        <LinearLayout
            android:id="@+id/left_btn_bg"
            android:layout_width="@dimen/login_register"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sel_login_back_btn"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/day_recommend_help_font_space" >

            <ImageView
                android:id="@+id/nav_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:src="@drawable/ic_action_previous_item" />
        </LinearLayout>

        <TextView
            android:id="@+id/nav_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:background="@color/login_divider" />
    </RelativeLayout>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_height"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_radius"
        android:drawableLeft="@drawable/icon_phone_gray"
        android:drawablePadding="10dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingLeft="@dimen/personal_timecapsule_padding"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/day_recommend_user_font" >
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="10dp"
        android:text="@string/register_phone_info"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/register_font_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/autncode"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_height"
            android:layout_weight="2"
            android:background="@drawable/shape_login_radius"
            android:drawableLeft="@drawable/icon_authcode_gray"
            android:drawablePadding="10dp"
            android:hint="输入6位手机验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_recommend_user_font" />

        <Button
            android:id="@+id/again_authcode"
            android:layout_width="0dp"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/sel_login_btn_bg"
            android:text="获取验证码"
            android:textColor="@color/sel_getauthcode_font_color"
            android:textSize="@dimen/day_recommend_user_font" />
    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/register_height"
        android:layout_marginLeft="@dimen/day_recommend_dot_space"
        android:layout_marginRight="@dimen/day_recommend_dot_space"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_login_btn_bg"
        android:text="下一步"
        android:textColor="@color/sel_getauthcode_font_color"
        android:textSize="@dimen/day_recommend_user_font" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reg_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg_now"
            android:textColor="@color/font_gray"
            android:textSize="13.0sp" />
    </LinearLayout>

</LinearLayout>