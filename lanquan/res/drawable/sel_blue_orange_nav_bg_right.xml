<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false"><shape android:shape="rectangle">
            <solid android:color="@color/system_main_blue" />

            <stroke android:width="0.1dp" android:color="@color/system_main_orange" />

            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>
    <item android:state_selected="true"><shape android:shape="rectangle">
            <solid android:color="@color/system_main_orange" />

            <stroke android:width="0.1dp" android:color="@color/system_main_orange" />

            <corners android:bottomRightRadius="5dp" android:topRightRadius="5dp" />
        </shape></item>

</selector>